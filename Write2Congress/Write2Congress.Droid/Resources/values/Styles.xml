<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Base theme applied no matter what API. Also changed AppTheme to MyAppTheme due to posible errors -->
  <style name="MyAppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--Non compant parent would be: parent="@android:style/Theme.Material.Light"> -->

    <!-- Main app colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary_blue</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_blue_dark</item>
    <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
    <item name="colorAccent">@color/accent_purple</item>

    <!-- Hides ActionBar -->
    <item name="windowNoTitle">true</item>
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowActionBar">false</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <!--Add App-wide themes here-->
  <style name="MyAppTheme" parent="MyAppTheme.Base">

  </style>

  <style name="ToolbarTheme" parent="MyAppTheme.Base">
    <!-- parent="android:style/ThemeOverlay.Material.Light.ActionBar" >-->
    <item name="android:textColorPrimary">@android:color/white</item>
    <!-- 
    <item name="android:textColorSecondary"></item>
    -->
  </style>

  <style name="MainMenuPopupTheme" parent="MyAppTheme.Base">
    <!-- parent="android:style/ThemeOverlay.Material.Light" -->
    <item name="android:textColorPrimary">@android:color/white</item>
    <!--
    <item name="android:background"></item>
    -->
  </style>

  <style name="LegislatorContactButtonTheme" parent="MyAppTheme.Base" >
    <!--
    <item name="android:background">@android:color/transparent</item>
    -->
    <item name="android:scaleType">center</item>
  </style>

  <style name="VerifyDialogTheme" parent="MyAppTheme.Base">
    <!-- Used for the buttons -->
    <!--
    <item name="colorAccent">#FFC107</item>
    -->
    <!-- Used for the title and text -->
    <item name="android:textColorPrimary">@color/primary_blue</item>
    <!-- Used for the background -->
    <!--
    <item name="android:background">#4CAF50</item> 
    -->
  </style>

</resources>

